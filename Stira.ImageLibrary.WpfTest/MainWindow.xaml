<Window x:Class="Stira.ImageLibrary.WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stira.ImageLibrary.WpfTest"
        xmlns:il="clr-namespace:Stira.ImageLibrary.Wpf;assembly=Stira.ImageLibrary.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid ClipToBounds="True">
            <il:LightImage x:Name="image" Margin="5,50,5,5" RawBytes="{Binding RawBytes}"
                     Width="1024" Height="768"
                     WidthImage="1024"
                     HeightImage="768"
                     IsColored="True" />
        </Grid>
    </Grid>
</Window>