<Window x:Class="Stira.ImageLibrary.WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stira.ImageLibrary.WpfTest"
        xmlns:il="clr-namespace:Stira.ImageLibrary.Wpf;assembly=Stira.ImageLibrary.Wpf"
        mc:Ignorable="d"
        Title="MainWindow"  Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid>
            <il:LightImage x:Name="image" RawBytes="{Binding RawBytes}"  IsColored="True" />
        </Grid>
        <Grid Grid.Row="1" Background="Gray" />
    </Grid>
</Window>